<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a2_daw.listadejedis.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_praxeum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bokunohero"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/text_view_praxeum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/praxeum_ada"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        />

    <ListView
        android:id="@+id/list_view_jedis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


</LinearLayout>
